[Unit]
Description=Poll Notion for habit tracker updates (every 30s)

[Timer]
# Run 15 minutes after boot
OnBootSec=1min

# Poll every 30s (cheap: single API call, skips update if unchanged)
OnUnitActiveSec=30s

# Small jitter
RandomizedDelaySec=5

# Persist timer state across reboots
Persistent=true

[Install]
WantedBy=timers.target
